{% extends 'base.html.twig' %}
{% block posActive %}
    {% block posAddActive %}
        active
    {% endblock %}
{% endblock %}
{% block title %}POS Add{% endblock %}
{% block stylesheets %}
{% endblock %}
{% block section %}
<div class="row">
    <!-- left column -->
    <div class="col-md-6 col-md-offset-3">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">POS Add</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="post">
                <div class="box-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" required class="form-control" name="name" placeholder="Enter name">
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" required class="form-control" name="address"  placeholder="Address">
                    </div>
                    <div class="form-group">
                        <label>Tel</label>
                        <input type="text" required class="form-control" name="tel" placeholder="Tel">
                    </div>
                    <div class="form-group">
                        <label>Assign Manager</label>
                        <select class="form-control" name="manager">
                            {% for i in managers %}
                                {{ render(controller(
                                    'App\\Controller\\Pos\\ManagerController::managerAvailabilitiesCheck',
                                    { 'id': i.id, 'name': i.name }
                                )) }}
{#                            <option>{{ i.name }} , {{ i.surname }}</option>#}
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Assign Partner</label>
                        <select class="form-control" name="partner">
                            {% for i in partner %}
                            <option value="{{ i.id }}">{{ i.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
{% endblock %}
